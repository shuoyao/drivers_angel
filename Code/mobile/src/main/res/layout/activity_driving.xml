<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"

    tools:context=".MainActivity">
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height= "70dp"
        android:layout_marginTop="20dp"
        android:tint="@color/wallet_holo_blue_light"
        android:src="@drawable/car"/>

    <android.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:title="Driving with "
        android:titleTextColor="#ffffff"
        android:background="@color/wallet_holo_blue_light"/>

    <TextView
        android:id="@+id/sleep_alert_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sleep Alert Period"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textStyle="bold"
        android:textColor="@color/wallet_holo_blue_light"/>

    <TextView
        android:id="@+id/sleep_interval"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="2 Hrs"
        android:textSize="70dp"
        android:gravity="center"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="#FF909090" />

    <TextView
        android:id="@+id/speed_alert_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Over speed Tolerance"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textStyle="bold"
        android:textColor="@color/wallet_holo_blue_light"/>

    <TextView
        android:id="@+id/speed_tolerance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="2 Hrs"
        android:textSize="70dp"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="#FF909090" />

    <android.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:title="Blocked Notifications: "
        android:titleTextColor="#ffffff"
        android:background="@color/wallet_holo_blue_light"/>


    <TextView
        android:id="@+id/disable_notification_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Disable Notifications"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:text="Text Message        "/>


        <TextView
            android:id="@+id/text_message_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="OFF"
            android:textSize="25dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:text="Social Media Apps"/>


        <TextView
            android:id="@+id/media_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="OFF"
            android:textSize="25dp"/>



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="#FF909090"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/end_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="END"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="@color/wallet_holo_blue_light"/>



</LinearLayout>
